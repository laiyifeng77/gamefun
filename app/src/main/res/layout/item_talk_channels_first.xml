<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    app:cardCornerRadius="1dp"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <RelativeLayout android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        >

        <RelativeLayout android:id="@+id/game_admin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_centerHorizontal="true">

            <ImageView android:id="@+id/icon_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_auth"/>

            <TextView android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon_v"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:textSize="14dp"
                android:text="更多频道"/>
            <ImageView android:id="@+id/tv_see_more"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:textSize="14dp"
                android:src="@drawable/ic_item_down"
                android:layout_centerVertical="true"
                android:textColor="@color/color_theme_light" />

            <View android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_color" />

        </RelativeLayout>

        <RelativeLayout android:id="@+id/game_panel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/game_admin"
            android:layout_marginTop="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_centerHorizontal="true">

            <ImageView android:id="@+id/iv_game_post"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_avatar2" />

            <TextView android:id="@+id/tv_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_game_post"
                android:layout_marginTop="6dp"
                android:text="十一教那些事 HOT"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"

                />


            <TextView android:id="@+id/tv_game_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_game_post"
                android:layout_below="@id/tv_game_name"
                android:layout_marginTop="6dp"
                android:textColor="@color/theme_orange"
                android:text="热度 ★★★★☆"
                android:textSize="14dp"
                android:layout_marginLeft="8dp"

                />

            <Button
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:text="关注"
                android:background="@drawable/club_login_btn_sel"
                />

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>

    </FrameLayout>
