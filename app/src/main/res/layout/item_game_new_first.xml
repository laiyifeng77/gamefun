<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    app:cardCornerRadius="1dp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <RelativeLayout android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="10dp"
        >

        <RelativeLayout android:id="@+id/game_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_centerHorizontal="true">

            <TextView android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="最新活动"/>
            <TextView android:id="@+id/tv_see_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:textSize="20dp"
                android:textColor="@color/color_theme_light"
                android:text="更多"/>

        </RelativeLayout>

        <RelativeLayout android:id="@+id/game_panel"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/game_admin"
            android:layout_centerHorizontal="true">

            <ImageView android:id="@+id/iv_game_post"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_avatar2" />

            <TextView android:id="@+id/tv_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_game_post"
                android:layout_marginTop="6dp"
                android:text="文学社周年书评大赛"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"

                />

            <TextView android:id="@+id/tv_game_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_game_post"
                android:layout_alignParentBottom="true"
                android:text="北大  文学社  文艺青年  毕业季"
                android:textSize="14dp"
                android:textColor="@color/theme_orange"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="8dp"

                />

            <TextView android:id="@+id/tv_game_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_game_post"
                android:layout_above="@id/tv_game_tags"
                android:layout_marginBottom="6dp"
                android:text="明天"
                android:textSize="14dp"
                android:layout_marginLeft="8dp"

                />

        </RelativeLayout>





    </RelativeLayout>

</android.support.v7.widget.CardView>

