<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    app:cardCornerRadius="1dp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <RelativeLayout android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingBottom="10dp"
        >

        <RelativeLayout android:id="@+id/game_admin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_centerHorizontal="true">

            <ImageView android:id="@+id/icon_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_auth"/>

            <TextView android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon_v"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:textSize="14dp"
                android:text="校园一角"/>
            <ImageView android:id="@+id/tv_see_more"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:textSize="14dp"
                android:src="@drawable/ic_item_down"
                android:layout_centerVertical="true"
                android:textColor="@color/color_theme_light" />

            <View android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_color" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:showDividers="middle"
            android:divider="@drawable/shape_divider"
            android:layout_below="@id/game_admin" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:showDividers="middle"
                android:divider="@drawable/shape_divider"
                android:orientation="horizontal"
                android:layout_below="@id/game_admin" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/icon_avatar" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/icon_avatar2" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:showDividers="middle"
                android:divider="@drawable/shape_divider"
                android:orientation="horizontal"
                android:layout_below="@id/game_admin" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/game_pic" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/icon_avatar" />


            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>

